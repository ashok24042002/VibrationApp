<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,1,2"
    android:background="#E5FDD1"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:text="\nMachine Table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_column="1" />

    <TextView
        android:text="\nThis table gives the information about the machines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_column="1" />

    <TableRow android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textStyle="bold"/>

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rice Cooker" />

        <TextView
            android:id="@+id/sts1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wheat Machine" />

        <TextView
            android:id="@+id/sts2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6" />

    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/id3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paddy Machine" />

        <TextView
            android:id="@+id/sts3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bad" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10" />

    </TableRow>
<TableLayout>
    <TableRow>
        <Button
            android:text="Machine Status"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnFrame"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:maxWidth="100dp"
            android:maxHeight="50dp"
            android:layout_weight="1" />

    </TableRow>
    <TableRow>
        <Button
            android:text="Alerts"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnLinear"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:maxWidth="100dp"
            android:maxHeight="50dp"
            android:layout_weight="1" />

    </TableRow>

    <TableRow>
        <Button
            android:text="Register"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnRegister"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:maxWidth="100dp"
            android:maxHeight="50dp"
            android:layout_weight="1" />

    </TableRow>
    <TableRow>
        <Button
            android:text="Set Value"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnSetValue"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:maxWidth="100dp"
            android:maxHeight="50dp"
            android:layout_weight="1" />

    </TableRow>
    <TableRow>
        <Button
            android:text="Get Value"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:id="@+id/btnGetValue"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:maxWidth="100dp"
            android:maxHeight="50dp"
            android:layout_weight="1" />

    </TableRow>
    <TableRow>
        <TextView
            android:text="About us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/aboutUs"
            android:gravity="center_horizontal"
            android:layout_weight="1" />

    </TableRow>
</TableLayout>







</TableLayout>